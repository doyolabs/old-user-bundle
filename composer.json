{
    "name": "doyo/user-bundle",
    "description": "Doyo User Bundle",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anthonius Munthi",
            "email": "me@itstoni.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Doyo\\UserBundle\\": "src/",
            "App\\": "fixtures/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Doyo\\UserBundle\\Tests\\": "tests/",
            "Spec\\Doyo\\UserBundle\\": "spec"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "symfony": {
            "require": "~3.4 || ~4.0"
        },
        "bin-dir": "fixtures/bin",
        "config-dir": "fixtures/config",
        "src-dir": "fixtures/src",
        "var-dir": "fixtures/var",
        "public-dir": "fixtures/public"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "test": "etc/bin/test.sh",
        "coverage": "COVERAGE=yes etc/bin/test.sh"
    },
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "api-platform/api-pack": "^1.2",
        "symfony/dotenv": "~3.4 || ~4.0",
        "symfony/flex": "^1.2"
    },
    "require-dev": {
        "behat/behat": "^3.5",
        "behat/symfony2-extension": "^2.1",
        "behatch/contexts": "^3.2",
        "matthiasnoback/symfony-dependency-injection-test": "^4.0",
        "phpspec/phpspec": "^5.1",
        "phpunit/phpcov": "^6.0",
        "phpunit/phpunit": "^8.1"
    }
}
